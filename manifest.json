{
  "manifest_version": 3,
  "name": "AI Task Analyzer",
  "version": "1.0.0",
  "description": "ブラウザ操作を記録し、AI代替可能なタスクを提案します",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
